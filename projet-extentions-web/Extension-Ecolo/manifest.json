{
    "manifest_version": 2,
    "name": "Limit the datas (for earth)",
    "version": "1.0",
  
    "description": "Avoid the images loading in the web browser to save datas and give you how many carbon print you're saving. ",
  
    "icons": {
      "96": "icons/icon-extension-ecolo.png"
    },
    
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content-script-ecolo.js"]
      }
    ],

    "background": 
      {
        "scripts": ["background.js"]
      },

    "browser_action":{
        "default_icon" : "icons/icon-extension-ecolo.png",
        "default_title": "Limit datas",
        "default_popup": "popup.html"
    },

  

    "permissions":
        ["<all_urls>",
        "webRequest",
        "webRequestBlocking",
        "storage"]

    
}